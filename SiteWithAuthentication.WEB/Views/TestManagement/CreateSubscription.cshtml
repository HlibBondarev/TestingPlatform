@using SiteWithAuthentication.WEB.Models
@model SubscriptionViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>@ViewBag.CourseName assignment:</h4>
    <h4>@ViewBag.Message</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <input type="hidden" value="@ViewBag.ParentId" name="CourseId" />

    <div class="form-group">
        <label class="control-label col-md-6">Search User by email</label>
        <div class="col-md-6">
            <input type="text" name="Email"
                   data-autocomplete-source='@Url.Action("AutoSearchEmail")'
                   class="form-control" />
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SubscriptionPeriod, htmlAttributes: new { @class = "control-label col-md-6" })
        <div class="col-md-6">
            @Html.EditorFor(model => model.SubscriptionPeriod, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SubscriptionPeriod, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IsApproved, htmlAttributes: new { @class = "control-label col-md-6" })
        <div class="col-md-6">
            @Html.EditorFor(model => model.IsApproved, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.IsApproved, "", new { @class = "text-danger" })
        </div>
    </div>

    <div>
        @Html.ActionLink("Back to course subscriptions list", "CourseSubscriptions", new { id = ViewBag.ParentId })
    </div>
</div>
}
<script type="text/javascript">
    $(function () {
        $("[data-autocomplete-source]").each(function () {
            var target = $(this);
            target.autocomplete({ source: target.attr("data-autocomplete-source") });
        });
    });
</script>