@using SiteWithAuthentication.WEB.Models
@model SubscriptionViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>@ViewBag.CourseName subscription:</h4>
    <h4>@ViewBag.Message</h4>
    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.CourseId)
    @Html.HiddenFor(model => model.Email)
    @Html.HiddenFor(model => model.StartDate)

    <div class="form-group">
        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-6" })
        <div class="col-md-6">
            <input type="text" name="EmailLabel"
                   value="@Model.Email"
                   class="form-control"
                   disabled="disabled" />
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.StartDate, htmlAttributes: new { @class = "control-label col-md-6" })
        <div class="col-md-6">
            <input type="text" name="StartDateLabel"
                   value="@Model.StartDate"
                   class="form-control"
                   disabled="disabled" />
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SubscriptionPeriod, htmlAttributes: new { @class = "control-label col-md-6" })
        <div class="col-md-6">
            @Html.EditorFor(model => model.SubscriptionPeriod, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SubscriptionPeriod, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IsApproved, htmlAttributes: new { @class = "control-label col-md-6" })
        <div class="col-md-6">
            @Html.EditorFor(model => model.IsApproved, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.IsApproved, "", new { @class = "text-danger" })
        </div>
    </div>

    <div>
        @Html.ActionLink("Back to course subscriptions list", "CourseSubscriptions", new { id = ViewBag.ParentId })
    </div>
</div>
}