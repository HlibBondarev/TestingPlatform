@using SiteWithAuthentication.WEB.Models
@model IEnumerable<SubscriptionViewModel>

@{
    ViewBag.Title = ViewBag.CourseName + " subscriptions";
}
@section styles {
    <link href='@Url.Content("~/Content/themes/base/jquery-ui.css")' rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/all.css")" rel="stylesheet" type="text/css" />
}

<h2>@ViewBag.CourseName subscriptions:</h2>
<p>
    @Html.ActionLink("Create New", "CreateSubscription", new { courseId = ViewBag.ParentId }, new { @class = "viewDialog", data_dialog_title = "Subscription creation" })
</p>
<div class="row">
    <div class="col-md-6">
        <table class="table table-striped table-bordered table-hover">
            <tr>
                <th class="text-center" style="width: 55%">
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th class="text-center" style="width: 10%">
                    @Html.DisplayNameFor(model => model.SubscriptionPeriod)
                </th>
                <th class="text-center" style="width: 10%">
                    @Html.DisplayNameFor(model => model.IsApproved)
                </th>
                <th class="text-center" style="width: 25%"></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td  class="text-center">
                        @Html.DisplayFor(modelItem => item.SubscriptionPeriod)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.IsApproved)
                    </td>
                    <td class="text-center">
                        @Html.ActionLink("Edit", "EditSubscription", new { id = item.ID }, new { @class = "viewDialog", data_dialog_title = "Subscription edition" }) |
                        @Html.ActionLink("Delete", "DeleteSubscription", new { id = item.ID }, new { @class = "viewDialog", data_dialog_title = "Subscription deleting" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
<p>
    @{
        if (Session["ActiveController"] != null)
        {
            string activeController = Session["ActiveController"].ToString();
            if (activeController == "Admin")
            {
                int parentParentIdForAdminController;
                if (Session["ParentParentIdForAdminController"] != null)
                {
                    parentParentIdForAdminController = int.Parse(Session["ParentParentIdForAdminController"].ToString());
                    @Html.ActionLink("Back to Courses", "SpecialityCourses", activeController, new { id = parentParentIdForAdminController }, null)
                }
            }
            else
            {
                @Html.ActionLink("Back to Courses", "Index")
            }
        }
    }
</p>

@section scripts {
    <script src='@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")' type="text/javascript"></script>
    <link rel="stylesheet" href="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.10.3/themes/sunny/jquery-ui.css">
    <script>
        $(document).ready(function () {

            $.ajaxSetup({ cache: false });

            $(".viewDialog").on("click", function (e) {
                e.preventDefault();

                var actionName;
                var actionTitle = $(this).attr("data-dialog-title");
                switch (actionTitle) {
                    case "Subscription creation":
                        actionName = "/TestManagement/CreateSubscription";
                        break;
                    case "Subscription edition":
                        actionName = "/TestManagement/EditSubscription";
                        break;
                    case "Subscription deleting":
                        actionName = "/TestManagement/DeleteSubscription";
                        break;
                }

                $("<div id='dialogContent'></div>")
                    .addClass("dialog")
                    .appendTo("body")
                    .load(this.href)
                    .dialog({
                        title: $(this).attr("data-dialog-title"),
                        close: function () { $(this).remove() },
                        modal: true,
                        width: $(window).width() * 0.3,
                        buttons: [{
                            text: "Ok",
                            click: function () {
                                $.ajax({
                                    url: actionName,
                                    type: "POST",
                                    data: $('form').serialize(),
                                    datatype: "json",
                                    success: function (result) {
                                        $("#dialogContent").html(result);
                                    }
                                })
                            }
                        },
                        { text: "Cancel", click: function () { $(this).dialog("close") } }]
                    });
            });
        });

    </script>
}