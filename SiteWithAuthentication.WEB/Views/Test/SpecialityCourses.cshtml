@using SiteWithAuthentication.WEB.Models
@model IEnumerable<CourseViewModel>

@{
    ViewBag.Title = ViewBag.SpecialityName + " courses";
    IEnumerable<TestResultViewModel> userTestResults = null;
    if (ViewBag.UserTestResults != null)
    {
        userTestResults = (IEnumerable<TestResultViewModel>)ViewBag.UserTestResults;
    }
}

<h2>@ViewBag.SpecialityName courses:</h2>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered table-hover">
            <tr>
                <th class="text-center" style="width: 40%">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="text-center" style="width: 5%">
                    @Html.DisplayNameFor(model => model.CourseTestQuestionsNumber)
                </th>
                <th class="text-center" style="width: 5%">
                    @Html.DisplayNameFor(model => model.TopicTestQuestionsNumber)
                </th>
                <th class="text-center" style="width: 5%">
                    @Html.DisplayNameFor(model => model.TimeToAnswerOneQuestion)
                </th>
                <th class="text-center" style="width: 5%">
                    @Html.DisplayNameFor(model => model.AttemptsNumber)
                </th>
                <th class="text-center" style="width: 5%">
                    @Html.DisplayNameFor(model => model.PassingScore)
                </th>
                <th class="text-center" style="width: 5%">
                    @Html.DisplayNameFor(model => model.IsFree)
                </th>
                <th style="width: 30%"></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.CourseTestQuestionsNumber)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.TopicTestQuestionsNumber)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.TimeToAnswerOneQuestion)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.AttemptsNumber)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.PassingScore)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.IsFree)
                    </td>
                    <td class="text-center">
                        @Html.ActionLink("Topic tests", "CourseTopics", new { id = item.Id }) |
                        @{
                            bool areAttemptsOver = false;
                            if (userTestResults != null)
                            {
                                int usedAttemptsNumber = (from tr in userTestResults
                                                          where tr.TestTitle == item.Name
                                                          select tr)
                                                          .Count();
                                if (usedAttemptsNumber >= item.AttemptsNumber)
                                {
                                    areAttemptsOver = true;
                                }
                            }
                            if (item.IsFree)
                            {
                                @Html.ActionLink("Start course test", "CourseTest", new { id = item.Id })
                            }
                            else
                            {
                                if (ViewBag.RoleName == null)
                                {
                                    @Html.ActionLink("Login", "Login", "Account")
                                    <span> or </span>
                                    @Html.ActionLink("Sign Up", "Register", "Account");
                                }
                                else
                                {
                                    string role = ViewBag.RoleName;
                                    if (role.ToLower() == "admin")
                                    {
                                        @Html.ActionLink("Start course test", "CourseTest", new { id = item.Id })
                                    }
                                    else
                                    {
                                        if (item.IsSubscribed)
                                        {
                                            if (areAttemptsOver)
                                            {
                                                @Html.Label("Attemps are over")
                                            }
                                            else
                                            {
                                                @Html.ActionLink("Start course test", "CourseTest", new { id = item.Id })
                                            }
                                        }
                                        else
                                        {
                                            if (item.IsInApproving)
                                            {
                                                <span>Subscription is in approving</span>
                                            }
                                            else
                                            {
                                                @Html.ActionLink("Subscribe", "Subscribe", new { id = item.Id }, new { @class = "viewDialog", data_dialog_title = "Subscribe" })
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
<p>
    @Html.ActionLink("Back to Specialities", "SubjectSpecialities", new { id = ViewBag.ParentParentId })
</p>

@section scripts {
    <script src='@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")' type="text/javascript"></script>
    <link rel="stylesheet" href="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.10.3/themes/sunny/jquery-ui.css">
    <script>
        $(document).ready(function () {

            $.ajaxSetup({ cache: false });

            $(".viewDialog").on("click", function (e) {
                e.preventDefault();

                var actionName;
                var actionTitle = $(this).attr("data-dialog-title");
                switch (actionTitle) {
                    case "Subscribe":
                        actionName = "/Test/Subscribe";
                        break;
                }

                $("<div id='dialogContent'></div>")
                    .addClass("dialog")
                    .appendTo("body")
                    .load(this.href)
                    .dialog({
                        title: $(this).attr("data-dialog-title"),
                        close: function () { $(this).remove() },
                        modal: true,
                        width: $(window).width() * 0.4,
                        buttons: [{
                            text: "Ok",
                            click: function () {
                                $.ajax({
                                    url: actionName,
                                    type: "POST",
                                    data: $('form').serialize(),
                                    datatype: "json",
                                    success: function (result) {
                                        $("#dialogContent").html(result);
                                    }
                                })
                            }
                        },
                        { text: "Cancel", click: function () { $(this).dialog("close") } }]
                    });
            });
        });

    </script>
}