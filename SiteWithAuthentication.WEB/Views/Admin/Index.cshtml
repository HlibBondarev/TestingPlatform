@using SiteWithAuthentication.WEB.Models
@model IEnumerable<SubjectViewModel>

@section styles {
    <link href='@Url.Content("~/Content/themes/base/jquery-ui.css")' rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/all.css")" rel="stylesheet" type="text/css" />
}
@{
    ViewBag.Title = "Subjects";
}

<p>
    @Html.ActionLink("Create New", "CreateSubject", new { }, new { @class = "viewDialog", data_dialog_title = "Subject creation" })
</p>
<h2>Subjects:</h2>
<div class="row">
    <div class="col-md-9">
        <table class="table table-striped table-bordered table-hover">
            <tr>
                <th class="text-center" style="width: 25%">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="text-center" style="width: 40%">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th class="text-center" style="width: 10%">
                    @Html.DisplayNameFor(model => model.IsApproved)
                </th>
                <th style="width: 25%"></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.IsApproved)
                    </td>
                    <td class="text-center">
                        @Html.ActionLink("Edit", "EditSubject", new { id = item.Id }, new { @class = "viewDialog", data_dialog_title = "Subject edition" }) |
                        @Html.ActionLink("Delete", "DeleteSubject", new { id = item.Id }, new { @class = "viewDialog", data_dialog_title = "Subject deleting" }) |
                        @Html.ActionLink("Specialities", "SubjectSpecialities", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
<p>
    @Html.ActionLink("Back to Main page", "Index", "Home")
</p>

@section scripts {
    <script src='@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")' type="text/javascript"></script>
    <link rel="stylesheet" href="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.10.3/themes/sunny/jquery-ui.css">
    <script>
        $(document).ready(function () {

            $.ajaxSetup({ cache: false });

            $(".viewDialog").on("click", function (e) {
                e.preventDefault();

                var actionName;
                var actionTitle = $(this).attr("data-dialog-title");
                switch (actionTitle) {
                    case "Subject creation":
                        actionName = "/Admin/CreateSubject";
                        break;
                    case "Subject edition":
                        actionName = "/Admin/EditSubject";
                        break;
                    case "Subject deleting":
                        actionName = "/Admin/DeleteSubject";
                        break;
                }

                $("<div id='dialogContent'></div>")
                    .addClass("dialog")
                    .appendTo("body")
                    .load(this.href)
                    .dialog({
                        title: $(this).attr("data-dialog-title"),
                        close: function () { $(this).remove() },
                        modal: true,
                        width: $(window).width() * 0.4,
                        buttons: [{
                            text: "Ok",
                            click: function () {
                                $.ajax({
                                    url: actionName,
                                    type: "POST",
                                    data: $('form').serialize(),
                                    datatype: "json",
                                    success: function (result) {
                                        $("#dialogContent").html(result);
                                    }
                                })
                            }
                        },
                        { text: "Cancel", click: function () { $(this).dialog("close") } }]
                    });
            });
        });

    </script>
}
